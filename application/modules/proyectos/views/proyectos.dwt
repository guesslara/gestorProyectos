<!DOCTYPE HTML>
<html>
<head>
	<meta charset = "utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Proyectos</title>
	<link rel="stylesheet" type="text/css" href="{DIR_MOD}/css/normalize.css" />
	<link rel="stylesheet" type="text/css" href="{DIR_MOD}/css/ed-grid/css/estilos.css" />
	<link rel="stylesheet" type="text/css" href="{DIR_MOD}/css/estilos.css" />
	<script type="text/javascript" src="{DIR_MOD}/js/jquery.js"></script>
	<!-- <script type="text/javascript" src="libs/w2ui-1.4.3/w2ui-1.4.3.min.js"></script> -->
	<!-- <link rel="stylesheet" type="text/css" href="libs/w2ui-1.4.3/w2ui-1.4.3.min.css" /> -->
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<script src="{DIR_MOD}/js/proyectos/js/scripts.js"></script>
</head>

<body>
	<div class="ed-container full headerPoryectos">
		<div class="ed-item base-70 no-padding">
			<a href="javascript:void(0)" onclick="mostrarMenu()" title="Mostrar men&uacute;"><span class="icon icon-menu"></span></a>
			<span class="tituloProyectos">Proyectos</span>
		</div>
		<div class="ed-item base-20"></div>
		<div class="ed-item base-10 no-padding">
			<a href="javascript:void(0)" onclick="mostrarSubmenu()"><span class="icon icon-menu-secundario menu-secundario"></span></a>
		</div>
	</div>

	<nav id="menuProyectos" class="contentMenuProyectos">
		<div class="ed-container full">
			<div class="ed-item buscadorMenu">
				<input type="text" id="" placeholder="B&uacute;squeda" class="txtBuscadorMenu">
			</div>
			<div class="ed-item no-padding">
				<ul class="ed-menu default menuProyectos">
					<li class="itemMenuProyectos"><a href="#">Nuevo proyecto</a></li>
					<li class="itemMenuProyectos"><a href="#">Listar proyectos</a></li>
				</ul>
			</div>
		</div>
	</nav>

	<nav id="submenuVentana" class="contentSubmenu">
		<div class="ed-container full">
			<div class="ed-item no-padding">
				<ul class="ed-menu default">
					<li class="itemSubmenuProyectos"><a href="#">Editar</a></li>
					<li class="itemSubmenuProyectos"><a href="#">Eliminar</a></li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Listado de proyectos -->
	<div class="ed-container full">
		<div class="ed-item base-100 no-padding itemsListadoProyectos scrollVertical">
			
			<!-- BEGIN LISTADO_PROYECTOS -->
			<div class="ed-container contentListaProyectos bordeInferiorListaProyectos">
				<div class="ed-item base-60 tablet-80 web-80 no-padding bordeDerechoListaProyectos">
					<div class="nameProyecto">{LISTADO_PROYECTOS.NOMBRE}</div>
					<div class="descProyecto">{LISTADO_PROYECTOS.DESCRIPCION}</div>
					<div class="fechaProyecto">Finaliza el {LISTADO_PROYECTOS.FECHA_VENCIMIENTO}</div>
				</div>
				<div class="ed-item base-30 tablet-10 web-15 no-padding bordeDerechoListaProyectos">
					<div id="{LISTADO_PROYECTOS.ID_DIVGRAFICO}" class="graficoAvance"></div>
				</div>
				<div class="ed-item base-10 tablet-10 web-5 no-padding">
					<div class="seleccionPoryecto"><a href="{LISTADO_PROYECTOS.RUTA_DETALLE}" title="De clic para mostrar el detalle del proyecto"><span class="icon icon-derecha"></span></a></div>
				</div>
			</div>
			<script type="text/javascript">
		      	(function (valor,id) {
		        	console.log(valor);
		        	var div="graficoAvance_"+id;
		        	console.log(div);
					try{
			            if(parseInt(valor) > 0){
			              	var valorC=100;
			              	var diffW=valorC - parseFloat(valor);
			              	var data = google.visualization.arrayToDataTable([
				               ['Task', 'Hours per Day'],
				               ['Avance',     parseFloat(valor)],
				               ['Diferencia',  parseFloat(diffW)]
			              	]);
			              	var options = {
				               pieHole: 0.6,
				               legend: 'none',
				               pieSliceText:'none',
				               colors:['#64b5f6','#E2E2E2']
			              	};
			              	var chart = new google.visualization.PieChart(document.getElementById(div));
			              	chart.draw(data, options);
			            }
			        }catch(err){
			        	console.log(err);
			        }		        
		      }('{LISTADO_PROYECTOS.PORCENTAJE}','{LISTADO_PROYECTOS.ID_PROYECTO}'));
    		</script>
			<!-- END LISTADO_PROYECTOS -->

		</div>
	</div>

</body>
</html>